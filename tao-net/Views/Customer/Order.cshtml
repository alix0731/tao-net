@model tao_net.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "order";
}





<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">

                            <h2><em>Bestil dit </em> <span>Varmeanlæg her</span></h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@using (Html.BeginForm("Save", "Customer"))
{

    <div class="col-lg-6">
        <fieldset>
            @Html.LabelFor(m => m.Customer.FirstName)
            @Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" })
        </fieldset>
    </div>

    <div class="col-lg-6">
        <fieldset>
            @Html.LabelFor(m => m.Customer.LastName)
            @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
        </fieldset>
    </div>



    <div class="col-lg-12">
        <fieldset>
            <br />
            @Html.LabelFor(m => m.Customer.Email)
            @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
        </fieldset>
    </div>

    <div class="col-lg-12">
        <fieldset>
            <br />
            @Html.LabelFor(m => m.Customer.Phone)
            @Html.TextBoxFor(m => m.Customer.Phone, new { @class = "form-control" })
        </fieldset>
    </div>

    <div class="col-lg-6">
        <fieldset>
            <br />
            @Html.LabelFor(m => m.Customer.Address)
            @Html.TextBoxFor(m => m.Customer.Address, new { @class = "form-control" })
        </fieldset>
    </div>

    <div class="col-lg-6">
        <fieldset>
            <br />
            @Html.LabelFor(m => m.Customer.Zip)
            @Html.TextBoxFor(m => m.Customer.Zip, new { @class = "form-control" })
        </fieldset>
    </div>

    <div class="col-lg-12">
        <fieldset>
            <br />
            @Html.LabelFor(m => m.Customer.HeatTypeId)
            @Html.DropDownListFor(m => m.Customer.HeatTypeId, new SelectList(Model.HeatTypes, "Id", "Name"), "Vælg Varmetype", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.HeatTypeId)
        </fieldset>
    </div>

    <div class="col-lg-12">
        <fieldset>
            <br />
            <button type="submit" id="form-submit" class="btn btn-primary ">Send Bestilling</button>
        </fieldset>
    </div>


}


