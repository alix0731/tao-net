@model tao_net.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Orders";
}


<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">

                            <h2><em>Alle </em> <span>bestillinger</span></h2>




                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


@if (Model.Customers.Count == 0)
{
    <p>Ingen bestillinger</p>
}
else
{


    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Fornavn</th>
                <th>Efternavn</th>
                <th>Varmeanlæg</th>
                <th>Pris pr.måned</th>
                <th></th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.heatType.Name</td>
                <td>@customer.heatType.Price kr</td>
                <td><a href="/Customer/Details/@customer.Id" class="btn btn-primary">Flere oplysniger</a></td>
                

            </tr>
            }
        </tbody>
    </table>
}